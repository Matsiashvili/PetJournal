<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#E1EBEE"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Profile Avatar -->
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ivProfileAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile_placeholder"
                android:scaleType="centerCrop"
                android:contentDescription="Profile Avatar" />
        </androidx.cardview.widget.CardView>

        <!-- User Name -->
        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#191970"
            android:layout_marginBottom="4dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/tvProfileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="youremail@example.com"
            android:textSize="15sp"
            android:textColor="#888888"
            android:layout_marginBottom="24dp" />

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="#FFFFFF"
            android:backgroundTint="#191970"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textColor="#191970"
            android:backgroundTint="#FFFFFF"
            android:background="?android:attr/selectableItemBackground"
            android:elevation="2dp"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Visuals Only Note -->
        <TextView
            android:id="@+id/tvProfileNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*This profile is for visual purposes only."
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="16dp"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
